# Settings to allow for instantly browsing my working repository in gitweb
[instaweb]
    ; bind only locally
    local = true

    ; set web server
    httpd = lighttpd

    ; set port to listen on
    port = 6001

    ; use browser to view. see git-web--browse for a list of acceptable values/browsers
    browser = chrome

    ; if modules needed
    ; modulepath = /path/to/modules

# Configure the web browser to use (make sure instaweb.browser matches)
[web]
    ; set to a default browser. see web--browse for more information
    browse = chrome

